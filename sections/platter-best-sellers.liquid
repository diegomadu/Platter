{{ 'platter-best-sellers-component.min.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} section-{{ section.id }}">
    <div class="w-full pl-[10vw] md:pl-[10vw] lg:pl-[6vw] pr-0 py-10">

        {% if section.settings.collection != blank %}
            <div class="flex items-center justify-between mb-6 pr-[10vw] md:pr-[10vw] lg:pr-[6vw]">
                <h2 class="heading text-3xl md:!text-6xl !font-bold">
                    {{ section.settings.collection.title }}
                </h2>
                <a href="{{ section.settings.collection.url }}"
                    class="subheading hidden md:!inline-flex font-medium">
                    Shop All {{ section.settings.collection.title }} →
                </a>
            </div>
        {% endif %}

        <!-- Scroll horizontal invisível e visível no hover -->
        <div class="flex gap-6 lg:gap-8 overflow-x-auto scroll-smooth pb-3 pr-0">
            {% for i in (1..2) %}
                {% for item in section.settings.collection.products %}
                    <div class="min-w-[230px] lg:min-w-[250px]">
                        {% render 'platter-card-product',
                            card_product: item,
                            id: forloop.index0,
                            image_ratio: section.settings.image_ratio %}
                    </div>
                {% else %}
                    <p class="text-center col-span-full">
                        No products found in this collection.
                    </p>
                {% endfor %}
            {% endfor %}
        </div>

        <div class="flex justify-center mt-8 md:hidden pr-[10vw]">
            <button
                class="w-full sm:w-auto bg-black text-lg font-semibold px-8 py-3 rounded-full shadow hover:bg-gray-800 transition-colors">
                Show More
            </button>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Best Sellers",
    "tag": "section",
    "class": "section-platter-best-sellers",
    "disabled_on": {
        "groups": ["header", "footer"]
    },
    "settings": [
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "Color scheme",
            "default": "scheme-1"
        },   
        {
            "type": "header",
            "content": "Collection"
        },         
        {
            "type": "collection",
            "id": "collection",
            "label": "Select collection"
        },
        {
            "type": "header",
            "content": "Layout"
        },         
        {
            "type": "select",
            "id": "image_ratio",
            "options": [
                {
                    "value": "adapt",
                    "label": "Adapt to image"
                },
                {
                    "value": "portrait",
                    "label": "Portrait"
                },
                {
                    "value": "square",
                    "label": "Square"
                }
            ],
            "default": "square",
            "label": "Image ratio"
        },        
        {
            "type": "header",
            "content": "Padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Top",
            "default": 40
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Bottom",
            "default": 52
        }
    ],
    "presets": [
        {
            "name": "Best Sellers",
            "category": "Platter"
        }
    ]
}
{% endschema %}
